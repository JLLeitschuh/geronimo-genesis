<model>
    <id>plugin</id>
    <name>Plugin</name>
    <version>1.0.0+</version>
    
    <description>
        GShell command plugin descriptor model.
    </description>
    
    <defaults>
        <default>
            <key>package</key>
            <value>org.apache.geronimo.gshell.plugin.model</value>
        </default>
    </defaults>

    <classes>
        <class java.abstract="true">
            <name>Element</name>
            <version>1.0.0+</version>
            <description>
                Represents the base element of the model.
            </description>
            <fields>
                <field xml.attribute="true">
                    <name>id</name>
                    <version>1.0.0+</version>
                    <type>String</type>
                </field>
                
                <field>
                    <name>description</name>
                    <version>1.0.0+</version>
                    <type>String</type>
                </field>

                <field>
                    <name>comment</name>
                    <version>1.0.0+</version>
                    <type>String</type>
                </field>

                <field>
                    <name>name</name>
                    <version>1.0.0+</version>
                    <type>String</type>
                    <required>true</required>
                </field>
            </fields>
        </class>

        <class rootElement="true" xml.tagName="plugin">
            <name>Plugin</name>
            <superClass>Element</superClass>
            <version>1.0.0+</version>
            <description>
                The root of the plugin descriptor.
            </description>
            <fields>
                <field>
                    <name>commands</name>
                    <version>1.0.0+</version>
                    <association>
                        <type>Command</type>
                        <multiplicity>*</multiplicity>
                    </association>
                    <required>true</required>
                </field>
            </fields>
        </class>

        <class>
            <name>Command</name>
            <superClass>Element</superClass>
            <version>1.0.0+</version>
            <description>
                Provides the basic configuration of a command.
            </description>
            <fields>
                <field>
                    <name>implementation</name>
                    <alias>classname</alias>
                    <version>1.0.0+</version>
                    <type>String</type>
                    <required>true</required>
                </field>

                <field>
                    <name>configuration</name>
                    <version>1.0.0+</version>
                    <type>DOM</type>
                </field>

                <field>
                    <name>requirements</name>
                    <version>1.0.0+</version>
                    <association>
                        <type>Requirement</type>
                        <multiplicity>*</multiplicity>
                    </association>
                </field>

                <!--
                TODO: Allow commands to specify dependencies and/or classworlds realms.
                -->
            </fields>
        </class>

        <class>
            <name>Requirement</name>
            <version>1.0.0+</version>
            <description>
                The Plexus requirements for the commands to be injected by the container.
            </description>
            <fields>
                <field>
                    <name>role</name>
                    <version>1.0.0+</version>
                    <type>String</type>
                    <required>true</required>
                </field>

                <field>
                    <name>hint</name>
                    <version>1.0.0+</version>
                    <type>String</type>
                </field>

                <field>
                    <name>field</name>
                    <version>1.0.0+</version>
                    <type>String</type>
                    <required>true</required>
                </field>
            </fields>
        </class>
    </classes>
</model>

